{
  "name": "coastlight-new",
  "version": "1.0.0",
  "description": "The website for the digital agency, coastlight digital.",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass _src/_sass:_src/assets/css",
    "watch:sass": "sass --watch _src/_sass:_src/assets/css",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "build": "npm run build:sass & ENVIRONMENT='production' npx @11ty/eleventy",
    "dev": "npx @11ty/eleventy --serve & npm run watch:sass",
    "production": "npm run watch:sass & ENVIRONMENT='production' npx @11ty/eleventy --serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "clean-css": "^5.3.2",
    "minify": "^9.2.0",
    "sass": "^1.58.2",
    "terser": "^5.16.4"
  }
}